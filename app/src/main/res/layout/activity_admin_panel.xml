<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".activities.AdminPanelActivity">

    <!-- Заголовок экрана -->
    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Панель администратора"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#D50032"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка Пользователи -->
    <Button
        android:id="@+id/btnUsers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="👥 Пользователи"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D50032"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/adminTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка Курсы -->
    <Button
        android:id="@+id/btnCourses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📚 Курсы"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D50032"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
